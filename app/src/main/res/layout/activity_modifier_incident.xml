<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/inc1">

    <!-- Titre modernisé -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier l'incident"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="24dp" />

    <!-- Champ de modification stylisé -->
    <EditText
        android:id="@+id/etModifierDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modifier la description"
        android:background="@drawable/edittext_background"
        android:textColor="#FFFFFF"
        android:textColorHint="#90FFFFFF"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Sélecteur de statut stylisé -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/spinner_background"
        android:elevation="4dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut :"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Bouton modernisé -->
    <Button
        android:id="@+id/btnModifierIncident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer les modifications"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:elevation="6dp"
        android:layout_marginTop="24dp" />
</LinearLayout>